<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="fragments.DetailsFragment"
        android:orientation="vertical"
        android:background="#495B5E"
        android:gravity="center"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/name_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Name"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/address_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Address"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>


        <TextView
            android:id="@+id/city_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="City"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/state_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="State"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/area_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Area"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>

        <TextView
            android:id="@+id/postal_code_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Postal Code"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/country_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Country"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/phone_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Phone"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/lat_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Lat"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/lng_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Lng"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>

        <TextView
            android:id="@+id/price_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Price"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/image_url_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Image"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/reserve_url_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Reserve_url"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/mobile_reserve_url_det"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Mobile_reserve_url"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
    </LinearLayout>
</ScrollView>
