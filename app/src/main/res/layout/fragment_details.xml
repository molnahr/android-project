<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="fragments.DetailsFragment"
        android:orientation="vertical"
        android:background="#495B5E"
        android:gravity="center"
        android:paddingBottom="80dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/firstpic"/>

        <TextView
            android:id="@+id/name_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Name"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/address_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Address"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>


        <TextView
            android:id="@+id/city_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="City"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/state_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="State"
            android:textSize="14sp"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/area_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Area"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>

        <TextView
            android:id="@+id/postal_code_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Postal Code"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/country_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Country"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>
        <TextView
            android:id="@+id/phone_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Phone"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>

        <TextView
            android:id="@+id/price_det"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Price"
            android:textSize="14sp"
            android:gravity="center_vertical">

        </TextView>

        <TextView
            android:id="@+id/reserve_url_det"
            android:layout_width="match_parent"
            android:autoLink="all"
            android:clickable="true"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Reserve_url"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            tools:ignore="RtlCompat">

        </TextView>
        <TextView
            android:id="@+id/mobile_reserve_url_det"
            android:autoLink="all"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="8dp"
            android:hint="Mobile_reserve_url"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            tools:ignore="RtlCompat">

        </TextView>

        <Button
            android:id="@+id/Map_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Map"
            android:background="@drawable/custom_button"
            app:backgroundTint="#00BCD4"></Button>
    </LinearLayout>
</ScrollView>
